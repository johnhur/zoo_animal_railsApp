<h1>Zoos#index</h1>
<p>Find me in app/views/zoos/index.html.erb</p>
<p><%= link_to "Add a New Zoo!", new_zoo_path %></p>
<% @zoos.each do |zoo| %>
<p>
Zoo:
<p><%= link_to zoo.name, zoo_path(zoo) %></p>
<%= zoo.location %>
<%= zoo.year_opened %>
<p><%= link_to "edit #{zoo.name}", edit_zoo_path(zoo) %> / <%= link_to "destroy #{zoo.name}", zoo_path(zoo) %></p>

</p>

<%= zoo.name %>'s animals:
<% zoo.animals.each do |animal| %>
<p>name: <%= animal.name %>
species: <%= animal.species %></p>
<% end %>
<% end %>